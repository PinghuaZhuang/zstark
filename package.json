{
  "name": "zstark",
  "version": "0.0.0",
  "description": "面向前端后台应用快速开发的解决方案.",
  "main": "/packages/@zstark/core",
  "scripts": {
    "example:core": "http-server ./packages/@zstark/core",
    "build": "yarn workspaces run build",
    "publish": "npm run build && lerna publish --no-verify-access --tag-version-prefix='zstark_v'",
    "lint": "npm run eslint",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx,.vue packages",
    "eslint": "eslint --cache --ext .jsx,.js,.ts,.tsx packages",
    "stylelint": "stylelint ./**/*.scss",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:PinghuaZhuang/track-report.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cache-loader": "^4.1.0",
    "conventional-changelog-cli": "^2.1.0",
    "core-js": "^2.6.5",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.5.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.1.0",
    "typescript": "~4.1.5"
  },
  "private": true,
  "workspaces": [
    "packages/@zstark/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "keywords": [
    "admin",
    "zstark"
  ],
  "author": "zphua2016@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PinghuaZhuang/track-report/issues"
  },
  "homepage": "https://github.com/PinghuaZhuang/track-report",
  "dependencies": {}
}
